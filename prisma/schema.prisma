datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id       String  @id @default(cuid())
  title    String
  body     String
  excerpt  String
  slug     String  @unique
  series   String?
  tilId    Int
  language String @default("en")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
